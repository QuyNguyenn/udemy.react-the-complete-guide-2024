{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-tabs": "off",
		"semi": ["error", "always"],
		"react/jsx-uses-react": "off",
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"prefer-default-export": "off",
		"prettier/prettier": [
			"error",
			{ "endOfLine": "auto", "singleQuote": true, "parser": "flow", "useTabs": true, "tabWidth": 2 }
		]
	}
}
